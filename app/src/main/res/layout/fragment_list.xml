<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.supermarket.list.ListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Background">>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/NewSupermarketBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/maxGap"
            android:layout_marginBottom="@dimen/maxGap"
            android:backgroundTint="@color/btnColor"
            android:contentDescription="add pokemon"
            android:src="@drawable/baseline_add_24"
            app:circularflow_defaultRadius="@dimen/radiusBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/titleMainFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/mediumGap"
            android:layout_marginEnd="@dimen/basicGap"
            android:gravity="center"
            android:text="@string/title"
            android:textSize="@dimen/titleSize"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</FrameLayout>